// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            // If breakpoint is unbound randomly, just open devtools in Chrome
            "name": "Run Web Extension",
            "type": "extensionHost",
            "debugWebWorkerHost": true,
            "request": "launch",
            "args": [
                // "--profile-temp", // clean environment
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionDevelopmentKind=web"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outFiles": ["${workspaceFolder}/dist/web/**/*.js"],
            //"preLaunchTask": "npm: esbuildc"
        },
        {
			"name": "Test with VS Code",
			"type": "extensionHost",
			"debugWebWorkerHost": true,
			"request": "launch",
			"args": [
                //"${workspaceFolder}/src/test",
                //"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionDevelopmentKind=web",
				"--extensionTestsPath=${workspaceFolder}/src/test/index.node.js"
			],
            "sourceMaps": true,
            // https://github.com/microsoft/vscode/issues/102042#issuecomment-656402933
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
			"outFiles": ["${workspaceFolder}/dist/web/**/*.js"],
			//"preLaunchTask": "npm: esbuildc"
		},
        {
            "name": "Test in Node",
            "request": "launch",
            "outputCapture": "std",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "test"]
        },
        {
            "name": "Test in terminal",
            "command": "npm run test",
            "request": "launch",
            "type": "node-terminal"
        },
    ]
}
